<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Account</th>
      <th>Password</th>
      <th>Email</th>
      <th>Description</th>
      <th>Upload course id list</th>
      <th>Concern course id list</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.avatar %></td>
        <td><%= teacher.name %></td>
        <td><%= teacher.account %></td>
        <td><%= teacher.password %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.description %></td>
        <td><%= teacher.upload_course_id_list %></td>
        <td><%= teacher.concern_course_id_list %></td>
        <td><%= teacher.school_id %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

