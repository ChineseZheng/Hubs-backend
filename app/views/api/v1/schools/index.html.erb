<p id="notice"><%= notice %></p>

<h1>Api V1 Schools</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Account</th>
      <th>Password</th>
      <th>Email</th>
      <th>Description</th>
      <th>Student id list</th>
      <th>Teacher id list</th>
      <th>Teacher count</th>
      <th>Student count</th>
      <th>Loading info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_v1_schools.each do |api_v1_school| %>
      <tr>
        <td><%= api_v1_school.avatar %></td>
        <td><%= api_v1_school.name %></td>
        <td><%= api_v1_school.account %></td>
        <td><%= api_v1_school.password %></td>
        <td><%= api_v1_school.email %></td>
        <td><%= api_v1_school.description %></td>
        <td><%= api_v1_school.student_id_list %></td>
        <td><%= api_v1_school.teacher_id_list %></td>
        <td><%= api_v1_school.teacher_count %></td>
        <td><%= api_v1_school.student_count %></td>
        <td><%= api_v1_school.loading_info %></td>
        <td><%= link_to 'Show', api_v1_school %></td>
        <td><%= link_to 'Edit', edit_api_v1_school_path(api_v1_school) %></td>
        <td><%= link_to 'Destroy', api_v1_school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Api V1 School', new_api_v1_school_path %>
